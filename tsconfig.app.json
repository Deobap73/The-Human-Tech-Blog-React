{
  "compilerOptions": {
    "composite": true, // Required for project references
    "module": "ESNext",
    "moduleResolution": "node", // Fixed
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "declaration": true, // Required for composite
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
